---
import { Image } from "astro:assets";
import Wrapper from "../shared/Wrapper.astro";
import "./wysiwygBlock.scss";
import Headline from "../shared/Headline.astro";
---

<div class="aboutwys">
  <Wrapper>
    <div class="aboutwys-title">
      <Headline ele="h2" hlstyle="two">{Astro.props.data.mainTitle}</Headline>
    </div>
    <div class="aboutwys-content" set:html={Astro.props.data.mainContent} />
  </Wrapper>
  <div class="aboutwys-image">
    <Image
      src={Astro.props.data.mainImage.sourceUrl}
      alt={Astro.props.data.mainImage.altText}
      inferSize={true}
    />
  </div>
</div>
