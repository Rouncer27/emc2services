---
import { Image } from "astro:assets";
import Wrapper from "../shared/Wrapper.astro";
import "./heroIntro.scss";
---

<div class="about-hero">
  <div class="about-hero-image">
    <div class="about-hero-image-wrapper">
      <Image
        src={Astro.props.data.heroImage.sourceUrl}
        alt={Astro.props.data.heroImage.altText}
        inferSize={true}
      />
    </div>
  </div>

  <div class="about-hero-content">
    <Wrapper>
      <h1 set:html={Astro.props.data.mainTitle} />
      <div
        class="about-hero-content-para"
        set:html={Astro.props.data.mainContent}
      />
    </Wrapper>
  </div>
</div>

<script>
  import { gsap } from "gsap";
  const title = document.querySelectorAll(".about-hero-content h1");
  const content = document.querySelectorAll(".about-hero-content-para");
  if (title && content) {
    gsap.from(title, {
      delay: 0.5,
      autoAlpha: 0,
      y: -100,
      duration: 0.75,
      ease: "back.out(2.5)",
    });

    gsap.from(content, {
      delay: 0.5,
      autoAlpha: 0,
      y: 100,
      duration: 0.75,
      ease: "back.out(2.5)",
    });
  }
</script>
