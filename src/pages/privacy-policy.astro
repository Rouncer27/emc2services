---
import Layout from "../layouts/Layout.astro";
import MainContent from "../components/Privacy/MainContent.astro";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
			query privacyPolicyPageQuery {
				page(id: "/privacy-policy", idType: URI) {
					seoMetaTags {
						seoMetaInformation {
							metaImage {
								altText
								sourceUrl
							}
							metaTitle
							metaDescription
						}
					}
					privacyPolicyPage {
						# START Hero section #
                        mainPageContentComponent {
                            title
                            mainContent
                        }
				
						# START Hero section #
						

						# START Hero section #
					

						# START Hero section #
						

						# START Hero section #
						

						# START Hero section #
						

						# START Hero section #
					
						# START Hero section #
					}

				}


				



			}
		`,
  }),
});

const {
  data: { page },
} = await response.json();
---

<Layout
  metaImg={page.seoMetaTags.seoMetaInformation.metaImage.sourceUrl}
  metaTitle={page.seoMetaTags.seoMetaInformation.metaTitle}
  metaDescription={page.seoMetaTags.seoMetaInformation.metaDescription}
>
  <MainContent data={page.privacyPolicyPage.mainPageContentComponent} />
</Layout>
