---
import Layout from "../layouts/Layout.astro";
import HeroIntro from "../components/Home/HeroIntro.astro";
import BlockOne from "../components/Home/BlockOne.astro";
import Testimonials from "../components/Home/Testimonials.astro";
import SliderComponent from "../components/Home/SliderComponent.jsx";
import BlockTwo from "../components/Home/BlockTwo.astro";
import BlockThree from "../components/Home/BlockThree.astro";
import BlockFour from "../components/Home/BlockFour.astro";
import Mailchimp from "../components/Home/Mailchimp.astro";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
			query homePageQuery {
				page(id: "/", idType: URI) {
					seoMetaTags {
						seoMetaInformation {
							metaImage {
								altText
								sourceUrl
							}
							metaTitle
							metaDescription
						}
					}

					homePage {

						# START Hero section #
						heroIntoComponent {
							mainTitle
							heroImage {
								altText
								sourceUrl
							}
						}

						# START Hero section #
						blockOneComponent {
							largeText
							smallText
							largeImage {
								altText
								sourceUrl
							}
							smallImage {
								altText
								sourceUrl
							}
						}

						# START Hero section #
						testimonialsComponent {
        					displayTestimonialBlock
      					}

						# START Hero section #
						sliderComponent {
							title
							sliderSlides {
								tabTitle
								slideTitle
								slideContent
								slideImage {
									altText
									sourceUrl
								}
							}
						}

						mailchimpComponent {
							link
							image {
								altText
								sourceUrl
							}	
						}

						# START Hero section #
						blockTwoComponent {
							content
							stats {
								title
								statNumber
								content
								icon {
									altText
									sourceUrl
								}
							}
						}

						# START Hero section #
						blockThreeComponent {
							title
							contentBlocks {
								title
								content
								backgroundColor
								icon {
									altText
									sourceUrl
								}
							}
							buttonOneText
							buttonOneUrl
							buttonTwoText
							buttonTwoUrl
						}

						# START Hero section #
						blockFourComponent {
							display
							title
							content
							video
						}
						# START Hero section #
					}

				}


				testimonials {
					nodes {
						title
						testimonialPost {
							testimonial
						}
					}
				}



			}
		`,
  }),
});

const {
  data: { page, testimonials },
} = await response.json();
---

<Layout
  metaImg={page.seoMetaTags.seoMetaInformation.metaImage.sourceUrl}
  metaTitle={page.seoMetaTags.seoMetaInformation.metaTitle}
  metaDescription={page.seoMetaTags.seoMetaInformation.metaDescription}
>
  <HeroIntro data={page.homePage.heroIntoComponent} />
  <BlockOne data={page.homePage.blockOneComponent} />
  <Testimonials
    data={page.homePage.testimonialsComponent}
    testimonials={testimonials.nodes}
  />
  <SliderComponent client:only="react" data={page.homePage.sliderComponent} />
  <Mailchimp data={page.homePage.mailchimpComponent} />
  <BlockTwo data={page.homePage.blockTwoComponent} />
  <BlockThree data={page.homePage.blockThreeComponent} />
  <!-- <BlockFour data={page.homePage.blockFourComponent} /> -->
</Layout>
